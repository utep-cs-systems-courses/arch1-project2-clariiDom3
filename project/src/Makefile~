# makfile configuration
COMMON_OBJECTS  = 
CPU             = msp430g2553
CFLAGS          = -mmcu=${CPU} -I../h
LDFLAGS		= -L/opt/ti/msp430_gcc/include

#switch the compiler (for the internal make rules)
CC              = msp430-elf-gcc
AS              = msp430-elf-as

all: main.elf 

#additional rules for files
main.elf: ${COMMON_OBJECTS} buzzer.o stateMachines.o wdInterruptHandler.o led.o switches.o main.o interruptHandler.o ../lib/libTimer.a
	${CC} ${CFLAGS} ${LDFLAGS} -o $@ $^

load: main.elf
	msp430loader.sh main.elf

clean:
	rm -f *.o *.elf

led.o: led.h

switches.o: switches.h led.h

buzzer.o: buzzer.h

stateMachines.o: stateMachines.h led.h buzzer.h

interruptHandler.o: switches.h

wdInterruptHandler.o: led.h switches.h stateMachines.h buzzer.h

main.o: led.h switches.h buzzer.h
